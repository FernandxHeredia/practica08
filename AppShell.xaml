<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="practica08.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:practica08"
    Shell.FlyoutBehavior="Flyout"
    Title="practica08">

    <FlyoutItem
        Title="LogIn">
        <ShellContent 
        Title="LogIn"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="MainPage"/>
    </FlyoutItem>


        <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem
     Title="Configuracion">
        <ShellContent 
     Title="Configuracion"
     ContentTemplate="{DataTemplate local:Configuracion}"
     Route="MainPage"/>
    </FlyoutItem>
    
    <FlyoutItem
    Title="Creador de galerias">
       <ShellContent 
    Title="Creador de galerias"
    ContentTemplate="{DataTemplate local:CreadorDeGalerias}"
    Route="MainPage"/>
    </FlyoutItem>

    <FlyoutItem
        Title="Galerias">
        <ShellContent 
        Title="Galerias"
        ContentTemplate="{DataTemplate local:Galeria}"
        Route="MainPage"/>
    </FlyoutItem>


</Shell>
